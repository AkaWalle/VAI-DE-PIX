# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/vai_de_pix
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///./vai_de_pix.db

# Security
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh tokens (opcional; não quebra login atual se não definido)
# USE_REFRESH_TOKENS=1
# ACCESS_TOKEN_EXPIRE_MINUTES_SHORT=10
# REFRESH_TOKEN_EXPIRE_DAYS=7

# Server Configuration
PORT=8000
HOST=0.0.0.0
DEBUG=True

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Optional: Email configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Optional: Webhook configuration
WEBHOOK_SECRET=your-webhook-secret
